[alias]
aa = add --all
assume = update-index --assume-unchanged
b = branch -vva
c = checkout
d = difftool
dd = difftool --cached
del = branch --delete
l = log -4
m = commit
new = checkout -b
s = status --short --branch
unassume = update-index --no-assume-unchanged
up = "!git remote update -p; git merge --ff-only @{u}"
sa = stash -u # stash all
pop = stash pop
# git checkout -- filename (reset individual)

[status]
relativepaths = false

[push]
